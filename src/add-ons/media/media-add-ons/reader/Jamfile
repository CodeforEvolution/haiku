SubDir HAIKU_TOP src add-ons media media-add-ons reader ;

UsePrivateHeaders media ;
SubDirHdrs [ FDirName $(SUBDIR) $(DOTDOT) abstract_file_interface ] ;

local architectureObject ;
for architectureObject in [ MultiArchSubDirSetup ] {
	on $(architectureObject) {
		Addon [ MultiArchDefaultGristFiles reader.media_addon ] :
			MediaReader.cpp
			MediaReaderAddOn.cpp

			:
			libabstract_file_interface.a

			be
			media
			[ TargetLibsupc++ ]
		;
	}
}

